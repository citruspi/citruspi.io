{% extends "page.j2" %}
{% block content %}
<div class="row">
    <div class="twelve columns stream-index-header" id="technical-stream">
        <h2>{{ title }}</h2>
    </div>
</div>
<div class="row">
    <div class="twelve columns">
        <table class="stream-index" id="technical-stream">
            {%- for post in posts %}
            <tr class="stream-index-entry" id="technical-stream">
                {% if post['path'] %}
                <td class="stream-index-entry-title"><a href="{{post['path']}}">{{post['title']}}</a></td>
                {% elif post['slug'] %}
                <td class="stream-index-entry-title"><a href="/{{ post['date'].split(' ')[-1] }}/{{post['slug']}}">{{post['title']}}</a></td>
                {% else %}
                <td class="stream-index-entry-title"><a href="/{{ post['date'].split(' ')[-1] }}/{{ post['title']|replace(' ', '-')|lower }}">{{post['title']}}</a></td>
                {% endif %}
                <td class="stream-index-entry-date">{{post['date']}}</td>
            </tr>
            {%- endfor %}
        </table>
    </div>
</div>
{% endblock %}
